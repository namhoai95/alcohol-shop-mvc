                }
                else
                {
                    <li class="purple">
                        @Html.Raw(@Ajax.ActionLink("lthemac", "Logout", "FTeam", null,
                        new AjaxOptions
                        {
                            
                            HttpMethod = "POST",
                            OnSuccess = "loadLogOut"
                        }, new { @class = "", title = "Đăng xuất" })
                                   .ToHtmlString()
                                   .Replace("lthemac", "<i class='icons icon-user-3'></i>Đăng xuất"))


                        @*<a href="#"><i class="icons icon-user-3"></i> Đăng xuất </a>*@

                    </li>
                    <li class="purple">
                        <a href="#"><i class="icons icon-user-3"></i> Xin chào @Model.UserName</a>
                        
                    </li>
                    
