
@{
    ViewBag.Title = "Đăng nhập";
}
<style>
    .iconic-input input[type="password"] {
    width: 100%;
    background: #f7f7f7;
    font-size: 14px;
    }
    input[type="password"], select {
    padding: 5px 10px;
    border: 1px solid #e6e6e6;
    height: 40px;
    transition: background 0.3s;
    -webkit-transition: background 0.3s;
    -moz-transition: background 0.3s;
    -ms-transition: background 0.3s;
    -o-transition: background 0.3s;
}
</style>
<ul id="login-dropdown" class="box-dropdown">
    <li>
        <div class="box-wrapper">
            @using (Ajax.BeginForm("LoginForm", "Fteam", null, new AjaxOptions()
            {
                UpdateTargetId = "mz-header",
                HttpMethod = "POST"


            }, new { }))
            {
                @Html.AntiForgeryToken()
                <h4>Đăng nhập</h4>
                <div class="iconic-input">
                    <input type="text" placeholder="Tài khoản" name="username">
                    <i class="icons icon-user-3"></i>
                </div>
                <div class="iconic-input">
                    <input type="password" placeholder="Mật khẩu" name="password">
                    <i class="icons icon-lock"></i>
                </div>
                <input type="checkbox" id="loginremember" name="    "> <label for="loginremember">Ghi nhớ</label>
                <br>
                <br>
                <div class="pull-left">
                    <input type="submit" class="orange" value="Đăng nhập">
                </div>
            }

            <div class="pull-right">
                <a href="#">Quên mật khẩu?</a>

                <br>
            </div>
            <br class="clearfix">
        </div>
        <div class="footer">
            <h4 class="pull-left">Khách hàng mới?</h4>
            <a class="button pull-right" href="create_an_account.html">Tạo tài khoản</a>
        </div>
    </li>
</ul>
