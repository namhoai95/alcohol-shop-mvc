    {
        console.log(result)
        if (result.error == -1) {
            console.log("Dang xuat")
            //thongbao2s("Thông báo", "")
        } else {
            //thongbaosuccess2s("Thông báo", "Thành công !")
            $.ajax({
                url: "/FTeam/HeaderPatialView",
                type: "GET",
                success: function (result) {
                    $('#mz-header').html(result);
                }
            });
        }
    }
</script>
