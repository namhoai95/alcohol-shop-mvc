<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewBag.Title - 4Wines</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,700,900,700italic,500italic' rel='stylesheet' type='text/css'>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/flexslider.css" rel="stylesheet" media="screen"/>
    <link href="~/Content/fontello.css" rel="stylesheet" />
    <link href="~/Content/settings.css" rel="stylesheet" media="screen"/>
    <link href="~/Content/animation.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.css" rel="stylesheet" />
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Scripts/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert.min.js"></script>
    <!------------------------------------------------------->

    <!----------------------------------------------------->
</head>
<body>
    <div class="container">
        <header class="row">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div id="mz-header">
                    @Html.Action("HeaderPatialView", "Fteam")
                </div>
                <div id="my-header">
                    @Html.Action("BarCartPartialView", "Fteam")
                    
                </div>
                <!-- Main Navigation -->
                <nav id="main-navigation" class="style1">
                    <ul>

                        <li class="home-green current-item">
                            @Html.Raw(@Ajax.ActionLink("index", "Index", "FTeam", null,
                                new AjaxOptions { UpdateTargetId = "mm-content", OnSuccess = "loadC" },
                                new { @class = "AjaxLink" }).ToHtmlString().Replace("index", "<i class='icons icon-shop-1'></i><span class='nav-caption'>Trang chủ</span><span class='nav-description'>Shop Wines4U</span>"))                          
                        </li>

                        <li class="red">
                            <a href="#">
                                <i class="icons icon-beer"></i>
                                <span class="nav-caption">Loại sản phẩm</span>
                                <span class="nav-description">Các loại rượu</span>
                            </a>

                            @Html.Action("MenuCatePartial", "Category")

                        </li>

                        <li class="red">
                            <a href="#">
                                <i class="icons icon-beer"></i>
                                <span class="nav-caption">Thương hiệu</span>
                                <span class="nav-description">Các thương hiệu rượu</span>
                            </a>
                            @Html.Action("MenuMPartial", "Manufacturersz")
                        </li>

                        <li class="red">
                            <a href="#">
                                <i class="icons icon-beer"></i>
                                <span class="nav-caption">Nhà sản xuất</span>
                                <span class="nav-description">Các nhà sản xuất</span>
                            </a>
                            @Html.Action("MenuPPartial", "Producerz")
                        </li>

                        <li class="red">
                            @Html.Raw(@Ajax.ActionLink("new", "Index", "PageJobz", null,
         new AjaxOptions { UpdateTargetId = "mm-content" },
         new { @class = "AjaxLink" }).ToHtmlString().Replace("new", "<i class='icons icon-pencil-7'></i><span class='nav-caption'>Bài viết</span><span class='nav-description'>Tin tức</span>"))
                        </li>

                        <li class="red">
                            @Html.Raw(@Ajax.ActionLink("contact", "Contact", "FTeam", null,
                                 new AjaxOptions { UpdateTargetId = "mm-content" },
                                 new { @class = "AjaxLink" }).ToHtmlString().Replace("contact", "<i class='icons icon-location-7'></i><span class='nav-caption'>Liên hệ</span><span class='nav-description'>Thông tin</span>"))
                        </li>

                        <li class="nav-search">
                            <i class="icons icon-search-1"></i>
                        </li>

                    </ul>
                    <div id="search-bar">

                        @{
                            Html.RenderAction("SearchPartial", "Productz");
                        } 

                    </div>
                </nav>
                <!-- /Main Navigation -->

            </div>

        </header>
        <div class="row content">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="breadcrumbs">
                    @*<p><a href="index.html">Home</a> <i class="icons icon-right-dir"></i> Tab child</p>*@
                </div>
            </div>
            <section class="main-content col-lg-9 col-md-9 col-sm-9 col-lg-push-3 col-md-push-3 col-sm-push-3">
                <div id="mm-content">
                    @RenderBody()
                </div>
             </section>
                <aside class="sidebar col-lg-3 col-md-3 col-sm-3  col-lg-pull-9 col-md-pull-9 col-sm-pull-9">
                    <div class="row sidebar-box purple">

                        <div class="col-lg-12 col-md-12 col-sm-12">

                            <div class="sidebar-box-heading">
                                <i class="icons icon-folder-open-empty"></i>
                                <h4>Danh mục</h4>
                            </div>

                            @Html.Action("ListCategoryPartial", "Category")

                        </div>

                    </div>
                    <!-- /Categories -->
                    <!-- Compare Products -->
                    <div class="row sidebar-box blue">

                        <div class="col-lg-12 col-md-12 col-sm-12">

                            <div class="sidebar-box-heading">
                                <i class="icons icon-docs"></i>
                                <h4>So sánh sản phẩm</h4>
                            </div>
                            <div id="compare-content">
                                @Html.Action("ComparePartialView", "Cartz")
                            </div>
                        </div>

                    </div>
                    <!-- /Compare Products -->
                    <!-- Carousel -->
                    <div class="row sidebar-box">

                        <div class="col-lg-12 col-md-12 col-sm-12 sidebar-carousel">

                            <!-- Slider -->
                            @Html.Action("SliderBarProductPartial", "Productz")
                            <!-- /Slider -->

                        </div>

                    </div>
                    <!-- /Carousel -->
                    <!-- Bestsellers -->
                    <div class="row sidebar-box red">

                        <div class="col-lg-12 col-md-12 col-sm-12">

                            <div class="sidebar-box-heading">
                                <i class="icons icon-award-2"></i>
                                <h4>Bán chạy</h4>
                            </div>

                            @Html.Action("BestSellerProductPartial", "Productz")

                        </div>

                    </div>
                    <!-- /Bestsellers -->
                    <!-- Tag Cloud -->
                    <div class="row sidebar-box green">

                        @{ 
                            Html.RenderAction("_ManufacturerPartial", "FTeam");
                        }
                    </div>
                    <!-- /Tag Cloud -->
                    <!-- Specials -->
                    <div class="row products-row sidebar-box orange">

                        <div class="col-lg-12 col-md-12 col-sm-12">

                            <!-- Carousel Heading -->
                            <div class="carousel-heading no-margin">

                                <h4><i class="icons icon-magic"></i> Đặc biệt</h4>
                                <div class="carousel-arrows">
                                    <i class="icons icon-left-dir"></i>
                                    <i class="icons icon-right-dir"></i>
                                </div>

                            </div>
                            <!-- /Carousel Heading -->

                        </div>

                        <!-- Carousel -->
                        <div class="carousel owl-carousel-wrap col-lg-12 col-md-12 col-sm-12">

                            <div class="owl-carousel" data-max-items="1">

                                <!-- Slide -->
                                @Html.Action("SliderSpecialProductPartial", "Productz")
                                <!-- /Slide -->

                            </div>

                        </div>
                        <!-- / Carousel -->


                    </div>
                </aside>
            </div>
        <div class="products-row row">

            <!-- Carousel Heading -->
            <div class="col-lg-12 col-md-12 col-sm-12">

                <div class="carousel-heading">
                    <h4>Bài viết &amp; tin tức</h4>
                    <div class="carousel-arrows">
                        <i class="icons icon-left-dir"></i>
                        <i class="icons icon-right-dir"></i>
                    </div>
                </div>

            </div>
            <!-- /Carousel Heading -->
            <!-- Carousel -->
            <div class="carousel owl-carousel-wrap col-lg-12 col-md-12 col-sm-12">

                <div class="owl-carousel" data-max-items="2">

                    <!-- Slide -->
                    @{
                        Html.RenderAction("_NewsPartial", "PageJobz");
                    }
                    <!-- /Slide -->


                </div>

            </div>
            <!-- /Carousel -->

        </div>
        <!-- /News -->
        <!-- Banner -->
        @Html.Partial("_BannerPartial")
        <!-- /Banner -->
        <!-- Footer -->
        <footer id="footer" class="row">

            <!-- Upper Footer -->
            <div class="col-lg-12 col-md-12 col-sm-12">

                <div id="upper-footer">

                    <div class="row">
                        <!-- Social Media -->
                        @Html.Partial("_FooterSocialMediaPartial")
                        <!-- /Social Media -->

                    </div>

                </div>

            </div>
            <!-- /Upper Footer -->
            <!-- Main Footer -->
            @{ Html.RenderAction("_FooterMainPartial", "FTeam"); } 
            <!-- /Main Footer -->
            <!-- Lower Footer -->
            @Html.Partial("_FooterLowerPartial")
            <!-- /Lower Footer -->

        </footer>
        <!-- Footer -->


        <div id="back-to-top">
            <i class="icon-up-dir"></i>
        </div>


        </div>
        
    <script src="~/Scripts/modernizr.min.js"></script>
    <script src="~/Scripts/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.raty.min.js"></script>

    <!-- Scroll Bar -->
    <script src="~/Scripts/perfect-scrollbar.min.js"></script>

    <!-- Cloud Zoom -->
    <script src="~/Scripts/zoomsl-3.0.min.js"></script>

    <!-- FancyBox -->
    <script src="~/Scripts/jquery.fancybox.pack.js"></script>

    <!-- jQuery REVOLUTION Slider  -->
    <script type="text/javascript" src="~/Scripts/jquery.themepunch.plugins.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.themepunch.revolution.min.js"></script>

    <!-- FlexSlider -->
    <script defer src="~/Scripts/flexslider.min.js"></script>

    <!-- IOS Slider -->
    <script src="~/Scripts/jquery.iosslider.min.js"></script>

    <!-- noUi Slider -->
    <script src="~/Scripts/jquery.nouislider.min.js"></script>

    <!-- Owl Carousel -->
    <script src="~/Scripts/owl.carousel.min.js"></script>

    <!-- Cloud Zoom -->
    <script src="~/Scripts/zoomsl-3.0.min.js"></script>

    <!-- SelectJS -->
    <script src="~/Scripts/chosen.jquery.min.js" type="text/javascript"></script>

    <!-- Main JS -->
    <script defer src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/main-script.js"></script>

