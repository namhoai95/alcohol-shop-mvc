@model WebMVC.Models.Website

@{
    Layout = Request.IsAjaxRequest() ? null : "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewBag.Title = "Thông tin website";
}
<div class="page-content">
    <div id="form-layouts" class="row">
        <div class="col-lg-12">
            <ul id="tableadvancedTab" class="nav nav-tabs">
                <li class="active"><a href="#table-sorter-tab" data-toggle="tab" style="background-color: #488c6c !important">Thông tin</a></li>
                <li>
                    @Html.Raw(@Ajax.ActionLink("lthema2", "Edit", "Websites", new { id = Model.id },
                                                   new AjaxOptions
                                                   {
                                                       UpdateTargetId = "m-content"
                                                   }, new { @class = "AjaxLink", @style = "background-color: #488c6c !important;color:white;" }).ToHtmlString().Replace("lthema2", "Cập nhật"))


                </li>
                <li>

                    @Html.Raw(@Ajax.ActionLink("lthema1", "Index", "Websites", null,
                                   new AjaxOptions
                                   {
                                       UpdateTargetId = "m-content"
                                   }, new { @class = "AjaxLink" }).ToHtmlString().Replace("lthema1", "Quay về"))



                </li>

            </ul>
            <div style="background: transparent; border: 0; box-shadow: none !important" class="tab-content pan mtl mbn responsive">
                <div id="tab-form-bordered">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="panel panel-green">
                                <div class="panel-heading">Quản lý thông tin website</div>
                                <div class="panel-body pan">
                                    <div class="form-horizontal form-bordered form-row-stripped">



                                        <div class="form-body">

                                            <div class="form-group">

                                                
                                            </div>
                                            <div class="form-group">
                                                <label for="txtSDT1" class="col-md-3 control-label">Số điện thoại 1 <span class='require'>*</span></label>
                                                <div class="col-md-4"><input id="txtSDT1" type="text" class="form-control" value="@Html.DisplayFor(model => model.sdt1)" readonly/><span class="help-block">Nhập số điện thoại</span></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtSDT2" class="col-md-3 control-label">Số điện thoại 2 <span class='require'>*</span></label>

                                                <div class="col-md-4"><input id="txtSDT2" type="text" class="form-control" value='@Html.DisplayFor(model => model.sdt2)' readonly /></div>
                                            </div>

                                            <div class="form-group">
                                                <label for="txtEmail" class="col-md-3 control-label">Email <span class='require'>*</span></label>

                                                <div class="col-md-4">
                                                    <div class="input-icon">
                                                    @Html.DisplayFor(model => model.email)
                                                    </div>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label for="txtDiaChi" class="col-md-3 control-label">Địa chỉ<span class='require'>*</span></label>

                                                <div class="col-md-4"><input id="txtDiaChi" type="text" placeholder="" class="form-control" value="@Html.DisplayFor(model => model.diachi)" readonly/></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtSkype" class="col-md-3 control-label">Skype </label>

                                                <div class="col-md-4"><input id="txtSkype" type="text" class="form-control" value="@Html.DisplayFor(model => model.skype)" readonly/></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtFacebook" class="col-md-3 control-label">Facebook <span class='require'>*</span></label>

                                                <div class="col-md-4"><input id="txtFacebook" type="text" class="form-control" value="@Html.DisplayFor(model => model.facebook)" readonly/></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTwi" class="col-md-3 control-label">Twitter </label>

                                                <div class="col-md-4"><input id="txtTwi" type="text" class="form-control" value="@Html.DisplayFor(model => model.twitter)" readonly/></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtGoogle" class="col-md-3 control-label">Goole API map <span class='require'>*</span></label>

                                                <div class="col-md-4"><input id="txtGoogle" type="text" class="form-control" value="@Html.DisplayFor(model => model.googlemap)" readonly/></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTenShop" class="col-md-3 control-label">Tên shop <span class='require'>*</span></label>

                                                <div class="col-md-4"><input id="txtTenShop" type="text" class="form-control" value="@Html.DisplayFor(model => model.tenshop)" readonly /></div>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtLinkWeb" class="col-md-3 control-label">URL <span class='require'>*</span></label>

                                                <div class="col-md-4"><input id="txtLinkWeb" type="text" class="form-control" value="@Html.DisplayFor(model => model.linkWebsites)" readonly/></div>
                                            </div>
                                            <div class="form-group text-center">
                                                &nbsp;
                                                <button type="button" class="btn btn-green">

                                                    @Html.Raw(@Ajax.ActionLink("lthema2", "Edit", "Websites", new { id = Model.id },
                                                   new AjaxOptions
                                                   {
                                                       UpdateTargetId = "m-content"
                                                   }, new { @class = "AjaxLink", @style= "color:white;" }).ToHtmlString().Replace("lthema2", "Cập nhật"))


                                                </button>
                                                &nbsp;
                                                <button type="button" class="btn btn-green">

                                                    @Html.Raw(@Ajax.ActionLink("lthema1", "Index", "Websites", null,
                                                   new AjaxOptions
                                                   {
                                                       UpdateTargetId = "m-content"
                                                   }, new { @class = "AjaxLink", @style = "color:white;" }).ToHtmlString().Replace("lthema1", "Trở về"))


                                                </button>
                                            </div>
                                        </div>
                                        <div class="form-actions text-right pal">
                                            
                                            
</div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
